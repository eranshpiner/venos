{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "/order",
    "title": "Order Log",
    "description": "The log of an order that was accepted by the business",
    "type": "object",
    "additionalProperties": false,    
    "required": [
        "total",
        "currency",
        "orderItems",
        "orderOwner",
        "brandId",
        "brandLocationId"            
    ],
    "properties": {
        "total": {
            "type": "number"
        },
        "currency": {
            "type": "string"
        },        
        "orderItems": {
            "$ref": "/orderItems"
        },                       
        "orderOwner": {
            "$ref": "/orderOwner"
        },
        "orderPayment": {
            "$ref": "/orderPayment"
        },
        "brandId": {
            "type": "string"
        },
        "brandLocationId": {
            "type": "string"
        },
        "conversationContext": {
            "type": "object"
        },                                
        "remarks": {
            "type": "string"                
        }        
    }
}