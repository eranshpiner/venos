{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "/orderItems",
    "title": "Order Items",
    "description": "The details items of an order",
    "additionalProperties": false,
    "type": "array",
    "items": {
        "type": "object",
        "minItems": 1,
        "uniqueItems": true,
        "required": [
            "itemId",
            "itemName",
            "categoryId",
            "quantity",
            "price",
            "unitPrice"
        ],
        "additionalProperties": false,
        "properties": {
            "itemId": {
                "type": "string"
            },
            "itemName": {
                "type": "string"
            },
            "categoryId": {
                "type": "string"
            },
            "quantity": {
                "type": "integer"
            },
            "price": {
                "type": "number"
            },
            "unitPrice": {
                "type": "number"
            },
            "remarks": {
                "type": "string"
            }                                                                                                                                                                                                   
        }
    }
}